@model la_mia_pizzeria_static.Models.Pizza

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
	<div class="container mt-3">
		<main role="main" class="pb-3">
			<div class="text-center">
				<h1 class="display-2">La Vesuviana</h1>
				<h1 class="display-4 pb-5">@Model.Name</h1>
				<div class="row">
					<div class="offset-4 col-4">
						<div><img src="/@Model.Photo"></img></div>
						<h3 class="my-4">@Model.Description</h3>
						<h5>Tutta questa bontà a soli €@Model.Price</h5>
					</div>
					<div>
						<a href="@Url.Action("Index", "Pizza")" style="width:150px" class="btn btn-primary">Torna alla Lista</a>
					</div>
				</div>
			</div>
		</main>
	</div>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

